<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:scrollbars="vertical"
    app:cardBackgroundColor="@color/larkblue"
    app:cardCornerRadius="40dp"
    tools:context=".person_payment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/back"
      android:layout_width="match_parent"
      android:layout_height="347dp"
      android:background="@color/browser_actions_title_color">

    <Button
        android:id="@+id/personPayDel2"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/larkblue"
        android:text="@string/personPayDel2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/larkblue" />

    <TextView
        android:id="@+id/payText1"
        android:layout_width="55dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Name :"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/payText2"
        app:layout_constraintEnd_toStartOf="@+id/inputName_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inputName_1"
        android:layout_width="267dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/inputDate_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/payText1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/payText2"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Email :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payText1" />

    <TextView
        android:id="@+id/inputDate_1"
        android:layout_width="237dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/payText2"
        app:layout_constraintTop_toBottomOf="@+id/inputName_1" />

    <TextView
        android:id="@+id/payText3"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Card Name :"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payText2"
        app:layout_constraintVertical_bias="0.021" />

    <TextView
        android:id="@+id/payText4"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Card Number :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payText3" />

    <TextView
        android:id="@+id/payText5"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="CVV :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payText4" />

    <TextView
        android:id="@+id/payText6"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Expire Date :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payText5" />

    <TextView
        android:id="@+id/inputArticles_1"
        android:layout_width="247dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDate_1" />


    <TextView
        android:id="@+id/inputArticles_"
        android:layout_width="247dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/payText4"
        app:layout_constraintTop_toBottomOf="@+id/inputArticles_1" />

    <TextView
        android:id="@+id/inputArticles_2"
        android:layout_width="247dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputArticles_" />

    <TextView
        android:id="@+id/inputArticles_3"
        android:layout_width="247dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputArticles_2" />

    <Button
        android:id="@+id/personPayEdit"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/larkblue"
        android:onClick="next"
        android:text="@string/personPayEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputArticles_3"
        app:rippleColor="@color/larkblue" />

    <ImageButton
        android:id="@+id/rate"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="next4"
        app:layout_constraintStart_toEndOf="@+id/personPayDel2"
        app:layout_constraintTop_toBottomOf="@+id/inputArticles_3"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:ignore="SpeakableTextPresentCheck" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>